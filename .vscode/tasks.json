    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clear console",
            "command": "clear",
            "group": "build"
        },
        {
            "label": "Start Bot",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/main.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":[
                "clear console"
            ]
        }
    ]
}